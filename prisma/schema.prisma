// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // connection URL is read from prisma.config.ts / env
}

enum Role {
  SUPERADMIN
  INSTITUTE_ADMIN
  TEACHER
  STUDENT
  SUPPORT
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  PENDING
}

model Institute {
  id        String    @id @default(uuid())
  name      String
  slug      String?   @unique
  email     String?   @unique
  phone     String?
  address   String?
  city      String?
  timezone  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  users   User[]
  courses Course[]
  batches Batch[]

  @@index([slug])
  @@index([city])
}

model User {
  id                     String     @id @default(uuid())
  email                  String     @unique
  passwordHash           String?
  fullName               String?
  avatarUrl              String?
  role                   Role       @default(STUDENT)
  status                 UserStatus @default(ACTIVE)
  instituteId            String?
  institute              Institute? @relation(fields: [instituteId], references: [id])
  createdAt              DateTime   @default(now())
  updatedAt              DateTime   @updatedAt
  passwordResetTokenHash String?
  passwordResetExpiresAt DateTime?

  refreshTokens RefreshToken[]

  @@index([instituteId])
  @@index([email])
}

model RefreshToken {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  tokenHash    String
  revoked      Boolean  @default(false)
  replacedById String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime
  ip           String?
  userAgent    String?

  @@index([userId])
  @@index([tokenHash])
}

model Course {
  id          String    @id @default(uuid())
  institute   Institute @relation(fields: [instituteId], references: [id])
  instituteId String
  title       String
  slug        String    @unique
  shortDesc   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  modules     Module[]
  batches     Batch[]
}

model Module {
  id       String   @id @default(uuid())
  course   Course   @relation(fields: [courseId], references: [id])
  courseId String
  title    String
  position Int      @default(0)
  lessons  Lesson[]
}

model Lesson {
  id       String  @id @default(uuid())
  module   Module  @relation(fields: [moduleId], references: [id])
  moduleId String
  title    String
  content  String?
}

model Batch {
  id String @id @default(uuid())

  // relation to Course
  course   Course @relation(fields: [courseId], references: [id])
  courseId String

  // relation to Institute (matches Institute.batches)
  institute   Institute? @relation(fields: [instituteId], references: [id])
  instituteId String?

  title     String
  startDate DateTime
  endDate   DateTime?
  timezone  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([courseId])
  @@index([instituteId])
}
